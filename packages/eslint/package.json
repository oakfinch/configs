{
  "name": "@oakfinch/eslint-config",
  "version": "1.1.12",
  "description": "Shared base ESLint config for @oakfinch projects",
  "main": "dist/javascript.js",
  "module": "dist/javascript.mjs",
  "types": "dist/javascript.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/javascript.mjs",
      "require": "./dist/javascript.js"
    },
    "./typescript": {
      "import": "./dist/typescript.mjs",
      "require": "./dist/typescript.js"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/javascript.d.ts"
      ],
      "./typescript": [
        "./dist/typescript.d.ts"
      ]
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build:clean": "rm -rf dist",
    "build:cjs:js": "echo \"module.exports = require('../src/javascript');\" > dist/javascript.js",
    "build:cjs:ts": "echo \"module.exports = require('../src/typescript');\" > dist/typescript.js",
    "build:cjs": "npm run build:cjs:js && npm run build:cjs:ts",
    "build:esm:js": "echo \"export {default} from './javascript.js';\" > dist/javascript.mjs",
    "build:esm:ts": "echo \"export {default} from './typescript.js';\" > dist/typescript.mjs",
    "build:esm": "npm run build:esm:js && npm run build:esm:ts",
    "build:types:js": "echo \"export {default} from './javascript.js';\" > dist/javascript.d.ts",
    "build:types:ts": "echo \"export {default} from './typescript.js';\" > dist/typescript.d.ts",
    "build:types": "npm run build:types:js && npm run build:types:ts",
    "build": "npm run build:clean && mkdirp dist && npm run build:cjs && npm run build:esm && npm run build:types",
    "test": "exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oakfinch/eslint-config.git"
  },
  "keywords": [
    "ESLint"
  ],
  "author": "Nate Volker <natevolker@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oakfinch/eslint-config/issues"
  },
  "homepage": "https://github.com/oakfinch/eslint-config#readme",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "mkdirp": "^1.0.4",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  }
}
