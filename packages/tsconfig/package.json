{
  "name": "@oakfinch/tsconfig",
  "version": "1.0.8",
  "description": "Base tsconfig for oakfinch projects",
  "main": "dist/cjs/tsconfig.json",
  "sideEffects": false,
  "exports": {
    ".": "./dist/cjs",
    "./cjs": "./dist/cjs",
    "./esm": "./dist/esm"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:clean": "rm -rf dist",
    "build:cjs": "mkdirp dist/cjs; cp src/cjs.json dist/cjs/tsconfig.json",
    "build:esm": "mkdirp dist/esm; cp src/esm.json dist/esm/tsconfig.json",
    "build": "npm run build:clean && npm run build:cjs && npm run build:esm",
    "test": "exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oakfinch/tsconfig.git"
  },
  "keywords": [
    "TypeScript",
    "tsconfig",
    "tsconfig.json"
  ],
  "author": "Nate Volker <natevolker@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oakfinch/tsconfig/issues"
  },
  "homepage": "https://github.com/oakfinch/tsconfig#readme",
  "peerDependencies": {
    "typescript": ">=4.4.3"
  },
  "devDependencies": {
    "mkdirp": "^1.0.4"
  }
}
